{
  "name": "pending-link",
  "version": "0.1.0",
  "description": "Small server to store and quickly share links",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "lint": "eslint src",
    "test": "mocha --compilers coffee:coffee-script/register test/*Spec.coffee test/*/*Spec.coffee",
    "test:watch": "npm run test -- -w",
    "build": "npm run generate-doc && npm run generate-html",
    "generate-doc": "raml2html spec/api.yml > public/api.html",
    "generate-html": "jade public/index.jade",
    "istanbul": "istanbul cover --print detail ./node_modules/mocha/bin/_mocha --dir qualimetry/cover -- -R spec --compilers coffee:coffee-script/register test/*Spec.coffee test/*/*Spec.coffee",
    "plato": "plato -r -d qualimetry/platoReport src/**/*.js",
    "qualimetry": "npm run plato && npm run istanbul"
  },
  "keywords": [
    "link"
  ],
  "author": "Adriean Khisbe",
  "license": "ISC",
  "dependencies": {
    "blipp": "^2.1.3",
    "body-parser": "^1.12.4",
    "bunyan": "^1.4.0",
    "clone": "^1.0.2",
    "coffee-script": "^1.9.3",
    "express": "^4.12.4",
    "express-validator": "^2.11.0",
    "factory-girl": "^1.5.0",
    "faker": "^2.1.4",
    "good": "^6.1.4",
    "good-console": "^5.0.2",
    "hapi": "^8.6.1",
    "joi": "^6.4.3",
    "mongojs": "^0.18.2",
    "morgan": "^1.5.3",
    "nconf": "^0.7.1",
    "nedb": "^1.1.2",
    "stream-blackhole": "^1.0.3"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "eslint": "^0.22.1",
    "extends": "0.0.4",
    "jade": "^1.10.0",
    "mocha": "^2.2.5",
    "plato": "^1.5.0",
    "raml2html": "^2.0.1",
    "supertest": "^1.0.1"
  }
}
